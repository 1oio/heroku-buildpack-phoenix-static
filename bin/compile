#!/usr/bin/env bash

# Ensure dirs are present
mkdir -p $1 $2 $3

build_dir=$(cd $1 && pwd)
cache_dir=$(cd $2 && pwd)
env_dir=$(cd $3 && pwd)
build_pack_dir=$(cd $(dirname $(dirname $0)); pwd)
heroku_dir=$build_dir/.heroku
mkdir -p $heroku_dir/node

source ${build_pack_dir}/lib/common.sh
source ${build_pack_dir}/lib/build.sh

load_config
export_config_vars
export_mix_env

download_node
install_node
install_npm
